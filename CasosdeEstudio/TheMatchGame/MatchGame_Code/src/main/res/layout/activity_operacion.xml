<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.applogin.Operacion"
    android:scrollIndicators="right">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realiza Calculo"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#030202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcula"
        android:id="@+id/button5"
        android:onClick="sendRequest"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/et_B"
        android:layout_alignRight="@+id/et_B"
        android:layout_alignEnd="@+id/et_B" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_operador"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_A"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/tv_operador"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_B"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/tv_operador"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_request"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignRight="@+id/tv_operador"
        android:layout_alignEnd="@+id/tv_operador" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escribe tu respuesta:"
        android:id="@+id/textView10"
        android:layout_marginTop="110dp"
        android:textSize="22dp"
        android:textColor="#42497a"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/tv_result"
        android:layout_below="@+id/et_request"
        android:layout_marginTop="110dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Level >>"
        android:onClick="nextLevel"
        android:id="@+id/bt_level"
        android:layout_below="@+id/tv_result"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:visibility="invisible" />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/webView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
